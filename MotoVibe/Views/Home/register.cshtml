@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            display: flex;
            background: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
            max-width: 900px;
            width: 100%;
            align-items: center;
        }

        .left {
            width: 50%;
            padding-right: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .right {
            width: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .right img {
                width: 100%;
                max-width: 400px;
                border-radius: 10px;
            }

        h2 {
            margin-bottom: 20px;
            font-size: 26px;
            font-weight: bold;
            text-align: left;
        }

        .input-group {
            margin-bottom: 15px;
            position: relative;
            width: 100%;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            text-align: left;
        }

        input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
            display: block;
        }

        .eye-icon {
            position: absolute;
            right: 10px;
            top: 42px;
            cursor: pointer;
        }

        .btn {
            background: #000;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            margin-bottom: 10px;
        }

            .btn:hover {
                background: #333;
            }

        .google-btn {
            background: white;
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
            cursor: pointer;
            font-size: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            width: 100%;
            box-sizing: border-box;
        }

            .google-btn img {
                width: 20px;
            }

            .google-btn:hover {
                background: #f1f1f1;
            }

        .login-link {
            margin-top: 10px;
            text-align: center;
        }

            .login-link a {
                color: #007bff;
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="container">
        <!-- Cột bên trái: Form -->
        <div class="left">
            <h2>Welcome to <br> MotoVibe Store</h2>

            <div class="input-group">
                <label for="name">Name</label>
                <input type="text" id="name" placeholder="Enter Your User Name">
            </div>

            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Enter Your Email">
            </div>

            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" placeholder="Enter Your Password">
                <span class="eye-icon" onclick="togglePassword()">👁️</span>
            </div>

            <button class="btn">Sign Up</button>

            <p style="text-align: center;">OR</p>

            <button class="google-btn">
                <img src="https://banner2.cleanpng.com/20240216/kzu/transparent-google-logo-black-background-with-google-logo-blue-and-red-1710875641328.webp" alt="Google">
                Sign up with Google
            </button>

            <p class="login-link">
                Already have an account? <a href="/login">Login</a>
            </p>
        </div>

        <!-- Cột bên phải: Hình ảnh -->
        <div class="right">
            <img src="https://bloganchoi.com/wp-content/uploads/2023/12/hinh-nen-tet-2024-36-696x984.jpg" alt="Store Image">
        </div>
    </div>

    <script>
        function togglePassword() {
            var passwordInput = document.getElementById("password");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }
    </script>

</body>
</html>
