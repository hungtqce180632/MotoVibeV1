@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create/Edit Blog";
}

<h2>@(Model != null ? "Edit Blog" : "Create Blog")</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="/Home/SaveBlog">
            <div class="form-group">
                <label for="blogTitle">Blog Title</label>
                <input type="text" name="blogTitle" id="blogTitle" class="form-control" value="@Model?.Title" placeholder="Enter blog title" required />
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <label for="blogContent">Content</label>
                <textarea name="blogContent" id="blogContent" rows="6" class="form-control" placeholder="Write your blog content..." required>@Model?.Content</textarea>
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <label for="author">Author</label>
                <input type="text" name="author" id="author" class="form-control" value="@Model?.Author" placeholder="Enter author name" required />
            </div>

            <button type="submit" class="btn btn-success" style="margin-top: 10px;">Save Blog</button>
        </form>
    </div>
</div>
