@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create/Edit Product";
}

<h2>@(Model != null ? "Edit Product" : "Create Product")</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="/Home/SaveProduct">
            <div class="form-group">
                <label for="productName">Product Name</label>
                <input type="text" name="productName" id="productName" class="form-control" value="@Model?.Name" placeholder="Enter product name" required />
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" class="form-control" value="@Model?.Price" placeholder="Enter product price" required />
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <label for="category">Category</label>
                <select name="category" id="category" class="form-control" required>
                    <option value="Sport" @(Model?.Category == "Sport" ? "selected" : "")>Sport</option>
                    <option value="Cruiser" @(Model?.Category == "Cruiser" ? "selected" : "")>Cruiser</option>
                    <option value="Touring" @(Model?.Category == "Touring" ? "selected" : "")>Touring</option>
                </select>
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="4" class="form-control" placeholder="Enter product description" required>@Model?.Description</textarea>
            </div>

            <button type="submit" class="btn btn-success" style="margin-top: 10px;">Save Product</button>
        </form>
    </div>
</div>
