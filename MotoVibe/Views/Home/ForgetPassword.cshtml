@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Forgot Password";
}

<h2>Forgot Password</h2>

<div class="row">
    <div class="col-md-6">
        <form action="/Home/ForgetPassword" method="post">
            <div class="form-group">
                <label for="email">Enter your email address</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="example@domain.com" required />
            </div>

            <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Reset Password</button>
        </form>
    </div>
</div>
