@{
    ViewBag.Title = "Forget";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            display: flex;
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
            max-width: 900px;
            width: 100%;
        }

        .left {
            width: 50%;
            padding: 20px;
        }

        .right {
            width: 50%;
        }

            .right img {
                width: 100%;
                border-radius: 10px;
            }

        h2 {
            margin-bottom: 20px;
            font-size: 24px;
        }

        .input-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .btn-group {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
        }

        .btn {
            background: #000;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

            .btn:hover {
                background: #333;
            }

        .reset-btn {
            width: 100%;
            background: #000;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            .reset-btn:hover {
                background: #333;
            }
    </style>
</head>
<body>

    <div class="container">
        <!-- Cột bên trái: Form -->
        <div class="left">
            <h2>Forget Password</h2>

            <div class="input-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" placeholder="Enter Your Email Address">
            </div>

            <div class="input-group">
                <label for="otp">OTP</label>
                <input type="text" id="otp" placeholder="Enter Your OTP">
            </div>

            <div class="btn-group">
                <button class="btn">SEND OTP</button>
                <button class="btn">CHECK OTP</button>
            </div>

            <div class="input-group">
                <label for="new-password">New Password</label>
                <input type="password" id="new-password" placeholder="Enter Your New Password">
            </div>

            <div class="input-group">
                <label for="confirm-password">Confirm New Password</label>
                <input type="password" id="confirm-password" placeholder="Confirm Your New Password">
            </div>

            <button class="reset-btn">RESET PASSWORD</button>
        </div>

        <!-- Cột bên phải: Hình ảnh -->
        <div class="right">
            <img src="https://bloganchoi.com/wp-content/uploads/2023/12/hinh-nen-tet-2024-36-696x984.jpg" alt="Store Image">
        </div>
    </div>

</body>
</html>
