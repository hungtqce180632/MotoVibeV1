@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Disable Employee";
}

<h2>Disable Employee</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="/Home/DisableEmployee">
            <div class="form-group">
                <label for="employeeId">Employee ID</label>
                <input type="text" name="employeeId" id="employeeId" class="form-control" placeholder="Enter Employee ID to disable" required />
            </div>

            <button type="submit" class="btn btn-danger" style="margin-top: 10px;">Disable Employee</button>
        </form>
    </div>
</div>
