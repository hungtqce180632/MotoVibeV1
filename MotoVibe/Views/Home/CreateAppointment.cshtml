@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Appointment";
}

<h2>Create Appointment</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="/Home/CreateAppointment">
            <div class="form-group">
                <label for="appointmentDate">Date</label>
                <input type="date" name="appointmentDate" id="appointmentDate" class="form-control" required />
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label for="appointmentTime">Time</label>
                <input type="time" name="appointmentTime" id="appointmentTime" class="form-control" required />
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label for="serviceType">Service Type</label>
                <select name="serviceType" id="serviceType" class="form-control" required>
                    <option value="">-- Select Service --</option>
                    <option value="1">Maintenance</option>
                    <option value="2">Repair</option>
                    <option value="3">Customization</option>
                </select>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label for="comments">Additional Comments</label>
                <textarea name="comments" id="comments" rows="3" class="form-control" placeholder="Describe your issue or request..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Schedule Appointment</button>
        </form>
    </div>
</div>
