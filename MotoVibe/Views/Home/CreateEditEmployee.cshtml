@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create/Edit Employee";
}

<h2>@(Model != null ? "Edit Employee" : "Create Employee")</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="/Home/SaveEmployee">
            <div class="form-group">
                <label for="employeeName">Employee Name</label>
                <input type="text" name="employeeName" id="employeeName" class="form-control" value="@Model?.Name" placeholder="Enter employee name" required />
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" value="@Model?.Email" placeholder="Enter employee email" required />
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <label for="role">Role</label>
                <select name="role" id="role" class="form-control" required>
                    <option value="Admin" @(Model?.Role == "Admin" ? "selected" : "")>Admin</option>
                    <option value="Employee" @(Model?.Role == "Employee" ? "selected" : "")>Employee</option>
                    <option value="Manager" @(Model?.Role == "Manager" ? "selected" : "")>Manager</option>
                </select>
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Enter employee password" required />
            </div>

            <button type="submit" class="btn btn-success" style="margin-top: 10px;">Save Employee</button>
        </form>
    </div>
</div>
