@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Disable Product";
}

<h2>Disable Product</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="/Home/DisableProduct">
            <div class="form-group">
                <label for="productId">Product ID</label>
                <input type="text" name="productId" id="productId" class="form-control" placeholder="Enter Product ID to disable" required />
            </div>

            <button type="submit" class="btn btn-danger" style="margin-top: 10px;">Disable Product</button>
        </form>
    </div>
</div>
