@{
    ViewBag.Title = "Review";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
        }

        .review-list {
            text-align: left;
        }

        .review-item {
            background: white;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
        }

        .stars {
            color: gold;
            font-size: 18px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Review</h2>
        <div class="review-list">
            <div class="review-item">
                <h4>Về được rồi</h4>
                <p class="stars">★★★★★</p>
                <p>Xe đẹp</p>
                <small>Reviewed on 2-9-2025</small>
            </div>

            <div class="review-item">
