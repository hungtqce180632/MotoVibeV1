
@{
    ViewBag.Title = "detailproduct";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 20px;
        }

        .product-container {
            display: flex;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            max-width: 900px;
            margin: auto;
        }

        .product-image img {
            width: 100%;
            max-width: 350px;
            border-radius: 10px;
        }

        .product-details {
            flex: 1;
            padding-left: 20px;
        }

            .product-details h2 {
                font-size: 24px;
                margin-bottom: 10px;
            }

        .details-table {
            width: 100%;
            margin-bottom: 15px;
        }

            .details-table td {
                padding: 5px 0;
            }

        .highlight {
            font-weight: bold;
            text-decoration: underline;
        }

        .price {
            font-size: 24px;
            color: red;
            font-weight: bold;
            margin: 10px 0;
        }

        .buy-button {
            display: inline-block;
            padding: 15px 30px;
            background: orange;
            color: white;
            font-size: 18px;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="product-container">
        <div class="product-image">
            <img src="honda-sh125i.png" alt="Honda SH125I">
        </div>
        <div class="product-details">
            <h2>HONDA SH125I</h2>
            <p class="highlight">Detailed description</p>
            <table class="details-table">
                <tr><td><strong>Year of manufacture:</strong></td><td>2025</td></tr>
                <tr><td><strong>Fuel:</strong></td><td>Gas 95</td></tr>
                <tr><td><strong>Transmission:</strong></td><td>Auto</td></tr>
                <tr><td><strong>Color:</strong></td><td>Black</td></tr>
            </table>
            <ul>
                <li>✅ 12 months warranty</li>
                <li>✅ Commitment to 100% quality vehicles with 77 point inspection</li>
                <li>✅ Commitment to 100% fully legal vehicles</li>
                <li>✅ Accurate vehicle information</li>
            </ul>
            <p class="price">Payment amount: 49,990,000 VND</p>
            <a href="#" class="buy-button">MUA NGAY</a>
        </div>
    </div>
</body>
</html>


